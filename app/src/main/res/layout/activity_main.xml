<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:elevation="2dp"
        android:background="@drawable/shape"
        android:layout_width="match_parent"
        android:layout_height="229dp">

    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_alignStart="@+id/textView6"
            android:layout_alignTop="@+id/textView3"
            android:drawableTop="@drawable/ic_android_black_24dp"
            android:gravity="center"
            android:text="DeviceSolutions"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView2"
            android:layout_marginEnd="16dp"
            android:drawableTop="@drawable/ic_account_box_black_24dp"
            android:gravity="center"

            android:text="Contacts"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginTop="227dp"
            android:drawableTop="@drawable/ic_favorite_black_24dp"
            android:gravity="center"
            android:text="HealthCare"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView5"
            android:layout_marginEnd="127dp"
            android:drawableTop="@drawable/ic_airplay_black_24dp"
            android:gravity="center"
            android:text="Tech Solutions"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView4"
            android:layout_alignTop="@+id/textView5"
            android:drawableTop="@drawable/ic_backup_black_24dp"
            android:gravity="center"
            android:text="Cloud "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="33dp"
            android:drawableTop="@drawable/ic_face_black_24dp"
            android:gravity="center"
            android:text="Assistance"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>